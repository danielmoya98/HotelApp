<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f8f9"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Servicio Seleccionado -->
        <TextView
            android:id="@+id/tvServicioSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio Seleccionado"
            android:textColor="#193238"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- CardView para Detalles del Servicio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Imagen del servicio -->
                <ImageView
                    android:id="@+id/imgServicio"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/sauna"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Nombre y Descripción -->
                <TextView
                    android:id="@+id/tvServicioNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvServicioDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de limpieza profesional"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView para Detalles del Servicio Completo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/itemDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles del Servicio"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDescripcionCompleta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nuestro servicio de limpieza profesional incluye la limpieza profunda de todas las áreas de su hogar..."
                    android:textColor="#193238"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Duración"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDuracion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 horas"
                    android:textColor="#193238"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveedor"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvProveedor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpieza"
                    android:textColor="#193238"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView para Información de Reservación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvBookingInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información de Reservación"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/etHoraInicio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="08:00"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/etHoraFin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="18:00" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación"
                    android:textStyle="bold"
                    android:textColor="#193238"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinnerUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmarPedido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirmar Pedido"
                    app:cornerRadius="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/azul" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
